<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Action</th>
  </tr>
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td>
        <%= link_to 'edit', edit_admin_article_path(article) %>
        <%= link_to 'delete', admin_article_path(article), :confirm => "Are you sure you would like to delete this article?", :class => 'delete', :method => :delete %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td><%= link_to 'add', new_admin_article_path, :class => 'add', :method => :get %></td>
  </tr>
</table>
