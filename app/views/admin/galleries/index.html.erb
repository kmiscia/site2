<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Action</th>
  </tr>
  <% @galleries.each do |gallery| %>
  <tr>
    <td><%= gallery.name %></td>
    <td>
      <%= link_to 'edit', edit_admin_gallery_path(gallery) %>
      <%= link_to 'delete', admin_gallery_path(gallery), :confirm => "Are you sure you would like to delete this gallery?", :class => 'delete', :method => :delete %>
    </td>
  </tr>
  <% end %>
  <tr>
    <td></td>
    <td><%= link_to 'add', new_admin_gallery_path, :class => 'add', :method => :get %></td>
  </tr>
</table>
