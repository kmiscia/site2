<%= render :layout => "/layouts/admin/form/row", :locals => { :form => f, :attribute => :name } do %>
  <%= f.text_field :name, :class => 'form-control' %>
<% end %>

<%= render :layout => "/layouts/admin/form/row", :locals => { :form => f, :attribute => :photo, :irregular => true } do %>
  <%= f.file_field :photo %>
<% end %>

<% if f.object.photo? %>
  <%= render :layout => "/layouts/admin/form/empty_row" do %>
    <%= image_tag f.object.photo.url %>
  <% end %>
<% end %>