<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Forgot password?</h2>
  
  <%= f.label :email %>
  <%= f.email_field :email, autofocus: true, class: 'input-block-level' %>

  <%= f.submit "Send me reset password instructions", class: 'btn btn-large btn-primary' %>
  
  <div class="shared_links">
    <%= render "admin/users/shared/links" %>
  </div>
<% end %>