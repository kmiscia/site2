<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => 'form-signin' }) do |f| %>
  <%= devise_error_messages! %>

  <h2 class="form-signin-heading">Sign Up</h2>
  
  <%= f.label :username %>
  <%= f.text_field :username, autofocus: true, class: 'input-block-level' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'input-block-level' %>

  <%= f.label :password %>
  <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
  <% end %>
  <%= f.password_field :password, autocomplete: "off", class: 'input-block-level' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, autocomplete: "off", class: 'input-block-level' %>

  <%= f.submit "Sign up", class: 'btn btn-large btn-primary' %>
  
  <div class="shared_links">
    <%= render "admin/users/shared/links" %>
  </div>
<% end %>
